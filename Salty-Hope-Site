import React from 'react';

export default function Services() {
  const services = [
    { title: 'Salt Therapy (Halotherapy)', description: 'Active halotherapy in a salt chamber with pharmaceutical-grade sodium chloride delivered via halogenerator.' },
    { title: 'Infrared Sauna', description: 'Relax, detoxify, and recharge with targeted infrared heat therapy.' },
