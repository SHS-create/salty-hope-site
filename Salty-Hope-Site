    { title: 'Membership Packages', description: 'Tiered memberships for unlimited or discounted sessions, family plans, and corporate wellness.' },
  ];

  return (
    <section className="py-20 px-8 bg-gray-50" id="services">
      <div className="max-w-5xl mx-auto text-center">
        <h2 className="text-4xl font-serif font-bold mb-12 text-gray-800">Our Services</h2>
        <div className="grid grid-cols-1 md:grid-cols-2 gap-10">
          {services.map((service, index) => (
            <div key={index} className="bg-white p-6 rounded-2xl shadow hover:shadow-lg transition">
              <h3 className="text-2xl font-bold mb-4 text-gray-800">{service.title}</h3>
              <p className="text-gray-600 mb-4">{service.description}</p>
              <a href="#booking" className="text-blue-500 hover:underline">Book Now</a>
            </div>
          ))}
        </div>
      </div>
    </section>
  );
}
